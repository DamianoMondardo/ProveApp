<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.proveapp.app.Preferiti">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Telefono"
        android:id="@+id/utente1telefono"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Telefono"
        android:id="@+id/utente2telefono"
        android:layout_alignTop="@+id/utente1telefono"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Chiamata"
        android:id="@+id/utente1chiamata"
        android:layout_below="@+id/utente1telefono"
        android:layout_alignLeft="@+id/utente1telefono"
        android:layout_alignStart="@+id/utente1telefono"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Chiamata"
        android:id="@+id/utente2chiamata"
        android:layout_alignTop="@+id/utente1chiamata"
        android:layout_alignLeft="@+id/utente2telefono"
        android:layout_alignStart="@+id/utente2telefono" />
</RelativeLayout>
